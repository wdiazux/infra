# Git Credentials for FluxCD Bootstrap
#
# Copy this file and encrypt with SOPS:
#   cp git-creds.yaml.example /tmp/git-creds.yaml
#   # Edit /tmp/git-creds.yaml with your credentials
#   sops -e /tmp/git-creds.yaml > git-creds.enc.yaml
#   rm /tmp/git-creds.yaml
#
# These credentials are automatically loaded by Terraform from SOPS.
#
# Two deployment modes:
#   1. External Git (GitHub, GitLab, external Forgejo): Set git_token
#   2. In-cluster Forgejo: Set forgejo_admin_* fields, token is auto-generated

# ============================================================================
# Git Provider Settings
# ============================================================================

# Git provider (forgejo, gitea, github, gitlab)
git_provider: forgejo

# Forgejo hostname (without https://)
# For in-cluster Forgejo, this will be the LoadBalancer IP or ingress hostname
git_hostname: git.home-infra.net

# Git username/owner
git_owner: wdiaz

# Repository name
git_repository: infra

# Personal access token with repo permissions (for external Git providers)
# Generate at: https://git.home-infra.net/user/settings/applications
# Leave empty if using in-cluster Forgejo (token will be auto-generated)
git_token: "your-token-here"

# ============================================================================
# In-Cluster Forgejo Admin Credentials (Optional)
# ============================================================================
# Only needed if enable_forgejo=true in Terraform
# Token will be automatically generated via Forgejo API after deployment

# Forgejo admin username
forgejo_admin_username: forgejo_admin

# Forgejo admin password (REQUIRED for in-cluster Forgejo)
# Use a strong password - this is used for initial setup and API access
forgejo_admin_password: "your-strong-password-here"

# Forgejo admin email
forgejo_admin_email: admin@home-infra.net
