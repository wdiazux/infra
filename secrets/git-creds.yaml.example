# Git Credentials for FluxCD Bootstrap
#
# Copy this file and encrypt with SOPS:
#   cp git-creds.yaml.example /tmp/git-creds.yaml
#   # Edit /tmp/git-creds.yaml with your credentials
#   sops -e /tmp/git-creds.yaml > git-creds.enc.yaml
#   rm /tmp/git-creds.yaml
#
# These credentials are automatically loaded by Terraform from SOPS.
#
# Two deployment modes:
#   1. External Git (GitHub, GitLab, external Gitea): Set git_token
#   2. In-cluster Gitea: Set gitea_admin_* fields, token is auto-generated

# ============================================================================
# Git Provider Settings
# ============================================================================

# Git provider (forgejo, gitea, github, gitlab)
git_provider: forgejo

# Forgejo/Gitea hostname (without https://)
# For in-cluster Gitea, this will be the LoadBalancer IP or ingress hostname
git_hostname: git.home-infra.net

# Git username/owner
git_owner: wdiaz

# Repository name
git_repository: infra

# Personal access token with repo permissions (for external Git providers)
# Generate at: https://git.home-infra.net/user/settings/applications
# Leave empty if using in-cluster Gitea (token will be auto-generated)
git_token: "your-token-here"

# ============================================================================
# In-Cluster Gitea Admin Credentials (Optional)
# ============================================================================
# Only needed if enable_gitea=true in Terraform
# Token will be automatically generated via Gitea API after deployment

# Gitea admin username
gitea_admin_username: gitea_admin

# Gitea admin password (REQUIRED for in-cluster Gitea)
# Use a strong password - this is used for initial setup and API access
gitea_admin_password: "your-strong-password-here"

# Gitea admin email
gitea_admin_email: admin@home-infra.net
